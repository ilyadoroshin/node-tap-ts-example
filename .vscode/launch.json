{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS Tests File",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "args": ["${relativeFile}"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}"
    }
  ]
}